<%= form_for(@product_option) do |f| %>
  <% if @product_option.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product_option.errors.count, "error") %> prohibited this product_option from being saved:</h2>

      <ul>
      <% @product_option.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="checkboxes">
    Products that have this option<br>
    <%= f.collection_check_boxes(:product_ids, Product.all, :id, :name, options = {"checked" => :product_ids}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
