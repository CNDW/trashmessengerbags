<fieldset>
	<h4><%= f.object.name %></h4>
  <%= f.hidden_field :fieldable_id %>
  <%= f.hidden_field :fieldable_type %>
	<%= f.select :field_type, %w[text_field check_box text_area] %>
	<%= f.text_field :name, placeholder: "field_name" %>
	<%= f.check_box :required %><%= f.label :required %>
	<%= f.check_box :show_public %><%= f.label :show_public %>
	<%= link_to "[remove]", '#', class: "remove_fields" %>
</fieldset>