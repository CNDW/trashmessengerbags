<h1>Listing options</h1>

<%= form_tag new_option_path, method: :get do %>
	<%= select_tag :option_type_id, options_from_collection_for_select(OptionType.all, :id, :name) %>
	<%= submit_tag "New Option", name: nil, class: "btn btn-primary" %>
<% end %>

<%= simple_table_for @options do |t| %>
  <% t.column :name %>
  <% t.column :id %>
  <% t.actions do %>
    <% action {|option| link_to "Edit", edit_option_path(option),class: "btn btn-primary"} %>
    <% action {|option| link_to "Delete", option, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you wish to delete #{option.name}?" }} %>
  <% end %>
<% end %>

<br>

