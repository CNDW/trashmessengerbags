<%= form_for(@option) do |f| %>
  <%= render "layouts/forms/errors", object: @option %>

  <%= f.hidden_field :option_type_id %>
  <h2><%= @option.option_type.name.singularize %></h2>

  <%= link_to_edit_custom_fields("Edit Fields", @option) %><br>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <%= render "layouts/forms/custom_fields", object: @option, f: f %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
