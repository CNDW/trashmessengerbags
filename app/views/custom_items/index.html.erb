<h1>Listing custom_items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>id</th>
      <th>category</th>
      <th>sub category</th>
      <th>product</th>
      <th>options</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody><% @custom_items.each do |custom_item| %>
      <tr>
        <td><%= custom_item.name %></td>
        <td><%= custom_item.id %></td>
        <td><%= custom_item.category%></td>
        <td><%= custom_item.product_category.name %></td>
        <td><%= custom_item.product.name %></td>
        <td>
          <% custom_item.product_options.each do |option| %>
            <%= option.name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', custom_item %></td>
        <td><%= link_to 'Edit', edit_custom_item_path(custom_item) %></td>
        <td><%= link_to 'Destroy', custom_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>

