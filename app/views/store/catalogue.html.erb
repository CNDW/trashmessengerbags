<%= render "store/store_nav" %>
<div class="col-xs-4 col-sm-3 col-md-2 sidebar-catalogue">
	<%= render "store/sidebar_nav", products_by_category: @products_by_category %>
</div>
<% @products_by_category.each do |category, types| %>
	<div class="col-xs-8 col-sm-9 col-md-10">
			
		<% types.each do |type| %>

			<div class="store-item type-<%= type.id %> col-xs-12 col-sm-12 col-md-5">
				<%= render "store/catalogue/carousels", type: type %>
			</div>

			<div class="store-item store-details type-<%= type.id %> col-xs-12 col-sm-12 col-md-7">
				<%= render "store/catalogue/items", type: type %>
			</div>

		<% end %>

	</div>			
<% end %>