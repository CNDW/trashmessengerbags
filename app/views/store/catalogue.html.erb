<%= render "store/store_nav" %>
<div class="col-sm-2 sidebar-catalogue">
	<%= render "store/sidebar_nav" %>
</div>
<div class="col-catalogue col-sm-10">

	<div class="row store-section">
		<% @products.each do |section, categories| %>
			
			<% categories.each do |category| %>

				<% category.products.each do |product| %>
					<div class="col-sm-5 store-item category-<%= category.id %> section-<%= section %>">
								
						<div class="thumbnail">
							<%= image_tag product.catalogue_image, alt: "Missing image" %>
							<h2><%= product.name %></h2>
							<p><%= product.desc %></p>
						</div>

					</div>		
				<% end %>
					
			<% end %>
			
		<% end %>
	</div>

</div>	

