<%= render "store/store_nav" %>
<div class="col-sm-2 sidebar-catalogue">
	<%= render "store/sidebar_nav" %>
</div>
<% @products.each do |section, categories| %>
	<div class="col-catalogue col-sm-10">
			
		<% categories.each do |category| %>

			<div class="store-item category-<%= category.id %> col-sm-5">
				<div class="carousel slide catalogue-carousel" data-ride="carousel" id="carousel-<%= category.id %>">
					
				  <div class="carousel-inner">
				  	<% category.gallery.images.each_with_index do |image, index| %>
					    <div class="item<% if index == 0 %> active<% end %>">
					      <img src="<%= image.image_data_url %>" alt="loading <%= index %>" width="300" height="300">
					    </div>
					  <% end %>
				  </div>
				
				  <ol class="carousel-indicators nav">
				  	<% category.gallery.images.each_with_index do |image, index| %>
				    	<li data-target="#carousel-<%= category.id %>" data-slide-to="<%= index %>" <% if index == 0 %>class="active" <% end %>>Item</li>
				    <% end %>
				  </ol>

				</div>
			</div>

			<div class="store-item category-<%= category.id %> col-sm-5">
				<% category.products.each do |product| %>
						<h2><%= product.name %></h2>
						<p><%= product.desc %></p>		
				<% end %>
			</div>

		<% end %>

	</div>			
<% end %>