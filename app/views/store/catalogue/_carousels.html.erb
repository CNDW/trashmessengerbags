<div class="carousel slide catalogue-carousel" data-ride="carousel" id="carousel-<%= type.id %>">
					
	<div class="carousel-inner">
		<% type.images.each_with_index do |image, index| %>
    <div class="carousel-img item<% if index == 0 %> active<% end %>">
      <img src="<%= image.image_data_url %>" alt="loading <%= index %>">
    </div>
  <% end %>
	</div>
				
	<ol class="carousel-indicators catalogue-indicators">
		<% type.images.each_with_index do |image, index| %>
	  	<li data-target="#carousel-<%= type.id %>" data-slide-to="<%= index %>" <% if index == 0 %>class="active" <% end %>>
      <img src="<%= image.image_data_url %>" alt="loading <%= index %>" width="100" height="100">
	  	</li>
	  <% end %>
	</ol>
</div>