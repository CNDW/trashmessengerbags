<div class="panel-group store-sidebar">
	<div class="panel panel-default btn-toolbar" role="toolbar">
		<% products_by_category.each do |category, types| %>
			<div class="panel-heading">
				<%= category %>
			</div>
			<div>
				<div class="btn-group store-sidebar-buttons">
				
					<% types.each do |type| %>
						<button class="type-selector btn btn-primary" type="button" id="<%= type.id %>">
							<%= type.name %>
						</button><br>
					<% end %>
				
				</div>
			</div>
		<% end %>
	</div>
</div>
