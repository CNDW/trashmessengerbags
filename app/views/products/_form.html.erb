<%= form_for(@product.with_no_image) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :desc %><br>
    <%= f.text_field :desc %>
  </div>
  <div class="field">
    <%= f.collection_select( :product_category_id, ProductCategory.all, :id, :name, { include_blank: 'Category' } ) %>
    <%= link_to "New Product Category", new_product_category_path %>
  </div>
  <div>
    Options available for this product<br>
    <%= f.collection_check_boxes( :product_option_ids, ProductOption.all, :id, :name, options = { "checked" => :product_option_ids } ) %>
  </div>
  <div class="field">
    Images for this product<br>
    <%= f.fields_for :images do |image| %>
      <%= image.label :title %>
      <%= image.text_field :title %><br>
      <%= image.label :image_data %>
      <%= image.file_field :image_data %><br>
      <% unless image.object.new_record? %>
        <%= image_tag image.object.image_data_url(:thumb).to_s %>
        <%= image.check_box('_destroy') + image.label('_destroy', 'Remove') %><br>
      <% end %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
