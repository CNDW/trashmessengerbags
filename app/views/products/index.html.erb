<h1>Trash Messenger Bags Products</h1>

<h2>Products</h2>
<table>
	<thead>
    <tr>
      <th>Model</th>
      <th>Price</th>
      <th>Description</th>
      <th>Category</th>
      <th>Available Options</th>
      <th>Images</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.desc %></td>
        <td><%= product.product_category.category %> / <%= product.product_category.name %></td>
        <td><%= product.option_list %></td>
        <td><% product.images.each do |image| %>
            <%= image_tag image.image_data_url(:thumb).to_s %>
          <% end %>
        </td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Product', new_product_path %>
<%= render 'categories' %>
<%= link_to 'New Category', new_product_category_path %>
<%= render 'options' %>
<%= link_to 'New Option', new_product_option_path %>